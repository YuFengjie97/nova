{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    // "types": ["vite/client"], // 默认自动引入node_modules/@types下所有类型，如果指定，则只引入那个，如果是[],都不引入
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./vite.config.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
